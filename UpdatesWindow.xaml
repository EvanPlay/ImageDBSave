                <!--<ListViewItem MouseDoubleClick="ListViewItem010_MouseDoubleClick">
                <StackPanel>
                    <Label Padding="0" Content="Ver 0.1.0"/>
                </StackPanel>
            </ListViewItem>-->

                </ListView>

            <Frame Name="fUpdateInfo"/>

        <!--</StackPanel>-->
