<Window x:Class="ImageDBSave.UpdatesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageDBSave"
        mc:Ignorable="d"
        Title="Обновления" Height="450" Width="700"
        MinHeight="450"
        MinWidth="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Closing="Window_Closing">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Frame Grid.Row="1" Name="fUpdate" Margin="10"/>
        
        <!--<StackPanel Name="spUpdate" Grid.Row="0">-->

            <ListView Grid.Row="0" Margin="19" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListViewItem MouseDoubleClick="ListViewItem1_MouseDoubleClick">
                        <StackPanel>
                        <Label FontSize="20" Padding="0" Content="Ver 0.0.0"/>
                    </StackPanel>
                    </ListViewItem>

                    <ListViewItem MouseDoubleClick="ListViewItem2_MouseDoubleClick">
                        <StackPanel>
                        <Label FontSize="20" Padding="0" Content="Ver 0.0.1"/>
                    </StackPanel>
                    </ListViewItem>

                    <ListViewItem MouseDoubleClick="ListViewItem3_MouseDoubleClick">
                        <StackPanel>
                        <Label FontSize="20" Padding="0" Content="Ver 0.0.2"/>
                    </StackPanel>
                    </ListViewItem>

                    <ListViewItem MouseDoubleClick="ListViewItem4_MouseDoubleClick">
                        <StackPanel>
                        <Label FontSize="20" Padding="0" Content="Ver 0.0.3"/>
                    </StackPanel>
                    </ListViewItem>

                    <ListViewItem MouseDoubleClick="ListViewItem5_MouseDoubleClick">
                        <StackPanel>
                    <Label FontSize="20" Padding="0" Content="Ver 0.0.4 - 0.0.5"/>
                </StackPanel>
                    </ListViewItem>

                    <ListViewItem MouseDoubleClick="ListViewItem6_MouseDoubleClick">
                        <StackPanel>
                    <Label FontSize="20" Padding="0" Content="Ver 0.0.6"/>
                </StackPanel>
                    </ListViewItem>

                    <ListViewItem MouseDoubleClick="ListViewItem7_MouseDoubleClick">
                        <StackPanel>
                    <Label FontSize="20" Padding="0" Content="Ver 0.0.7"/>
                </StackPanel>
                    </ListViewItem>

                    <ListViewItem MouseDoubleClick="ListViewItem8_MouseDoubleClick">
                        <StackPanel>
                    <Label FontSize="20" Padding="0" Content="Ver 0.0.8"/>
                </StackPanel>
                    </ListViewItem>

                    <ListViewItem MouseDoubleClick="ListViewItem9_MouseDoubleClick">
                        <StackPanel>
                            <Label FontSize="20" Padding="0" Content="Ver 0.0.9"/>
                        </StackPanel>
                    </ListViewItem>

                </ListView>

            <Frame Name="fUpdateInfo"/>

        <!--</StackPanel>-->
        <Button Name="btBack" Click="btBack_Click" Content="Вернуться" Width="60" Height="20" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" ToolTip="Нажмите на кнопку, что бы вернуться."/>
        <TextBlock Style="{StaticResource Version}" VerticalAlignment="Top"/>
        
    </Grid>
</Window>
