        <Frame Grid.Column="1" Name="fUpdate" Margin="10"/>
        
        <!--<StackPanel Name="spUpdate" Grid.Row="0">-->

            <ListView Grid.Column="0" Margin="19" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <ListViewItem Style="{StaticResource ListStyle}"
