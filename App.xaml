<Application x:Class="ImageDBSave.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ImageDBSave"
             StartupUri="AuthorizationWindow.xaml"
             Startup="Application_Startup"
             >
    <Application.Resources>
        <FontFamily x:Key="myFont">pack://application:,,,/MySource/#Ponter</FontFamily>

        <Style x:Key="Version" TargetType="TextBlock">
            <Setter Property="Text" Value="Ver 0.0.9"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="ToolTip" Value="Актуальная версия приложения."/>
        </Style>

    </Application.Resources>
</Application>
